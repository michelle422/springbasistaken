<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns='http://www.springframework.org/schema/beans'
 xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
 xsi:schemaLocation='http://www.springframework.org/schema/beans
 http://www.springframework.org/schema/beans/spring-beans.xsd'>
 	<bean id="persoonRepositoryCSV"
			class="be.vdab.repositories.PersoonRepositoryCSV">
		<constructor-arg value="/data/personen.csv" />
	</bean>
	<bean id="persoonRepositoryMeerdereRegels"
			class="be.vdab.repositories.PersoonRepositoryMeerdereRegels">
		<constructor-arg value="/data/personen.txt" />
	</bean>
	<bean id="persoonService"
			class="be.vdab.services.PersoonServiceImpl">
		<constructor-arg ref="persoonRepositoryCSV" />
	</bean>
 	<bean id='persoonViewer' class='be.vdab.presentations.PersoonViewer'>
 		<constructor-arg>
 			<list>
 				<value>VOORNAAM</value>
 				<value>FAMILIENAAM</value>
 				<value>AANTAL_KINDEREN</value>
 			</list>
 		</constructor-arg>
 		<constructor-arg ref="persoonService"/>
 	</bean>
 </beans>